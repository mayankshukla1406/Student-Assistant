<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Ask_Feedback">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtfeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#5ce1e6"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:text="Please Give Your Feedback"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfeedback"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
       android:layout_marginStart="32dp"
        android:text="Rate Us:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/txtfeedback"
        android:layout_centerHorizontal="true"
      android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/txtrating"
        android:numStars="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="111dp"
        android:layout_height="35dp"
        android:layout_below="@id/rating_bar"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:text="submit" />

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/bt_submit"
        android:layout_margin="20dp"
        >
    <TextView
        android:id="@+id/txtfaq"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="FAQ"/>

      <ExpandableListView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/expandableListView"
          />



    </RelativeLayout>
</RelativeLayout>